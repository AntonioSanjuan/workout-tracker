{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@env": ["apps/shell/src/environments/environment"],
      "@workout-tracker/models": ["libs/models/src/index.ts"],
      "@workout-tracker/services/api": ["libs/services/api/src/index.ts"],
      "@workout-tracker/services/auth": ["libs/services/auth/src/index.ts"],
      "@workout-tracker/services/auth-persistance": [
        "libs/services/auth-persistance/src/index.ts"
      ],
      "@workout-tracker/services/culture": [
        "libs/services/culture/src/index.ts"
      ],
      "@workout-tracker/services/exercises": [
        "libs/services/exercises/src/index.ts"
      ],
      "@workout-tracker/services/message": [
        "libs/services/message/src/index.ts"
      ],
      "@workout-tracker/services/user-settings": [
        "libs/services/user-settings/src/index.ts"
      ],
      "@workout-tracker/shared-store": ["libs/shared-store/src/index.ts"],
      "@workout-tracker/test": ["libs/test/src/index.ts"],
      "@workout-tracker/ui": ["libs/ui/src/index.ts"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
